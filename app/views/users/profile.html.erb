<div class="container-fluid">
  <div class="row" >
    <div class="col" >
      <%= link_to "アカウント", users_account_path %><br />
      <%= link_to "プロフィール", users_profile_path %>
    </div>
    <div class="col" >
      <h2>プロフィール</h2>
      <p>アイコン画像</p>
      <% if @user.avatar.attached? %>
        <p><%= image_tag @user.avatar, size: "80x80" %></p>
      <% end %>

      <p>名前</p>
      <p><%= @user.name %></p>
      <p>自己紹介</p>
      <p><%= @user.introduction %></p>
    </div>
    <div class="col" >
      <%= link_to "編集", users_profile_edit_path %>
    </div>
  </div>
</div>
