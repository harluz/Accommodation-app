<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
<%= render "users/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <% if @user.errors.include?(:name) %>
    <p class="text-danger"><%= @user.errors.full_messages_for(:name).first %></p>
  <% end %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <% if @user.errors.include?(:email) %>
    <p class="text-danger"><%= @user.errors.full_messages_for(:email).first %></p>
  <% end %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <% if @user.errors.include?(:password) %>
    <p class="text-danger"><%= @user.errors.full_messages_for(:password).first %></p>
  <% end %>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <% if @user.errors.include?(:password_confirmation) %>
    <p class="text-danger"><%= @user.errors.full_messages_for(:password_confirmation).first %></p>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
