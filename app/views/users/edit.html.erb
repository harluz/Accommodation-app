<%= form_with model: @user url: users_profile_path(@user) do |f| %>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autocomplete: "image" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>

  <div>
    <%= link_to "キャンセル", :back %>
  </div>
<% end %>