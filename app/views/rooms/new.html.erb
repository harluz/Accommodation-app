<%= form_with model: @room do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_area :detail, autofocus: true, autocomplete: "detail" %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, autocomplete: "price" %>
  </div>

  <div class="field">
    <%= f.label :adress %><br />
    <%= f.text_field :adress, autocomplete: "adress" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autocomplete: "image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>

  <div>
    <%= link_to "キャンセル", root_path %>
  </div>
<% end %>