<div class="field">
  <%= obj.label :check_in, class: "form-label" %>
  <%= obj.date_field :check_in, autofocus: true, autocomplete: "check_in", class: "form-control" %>
</div>
<% if @reservation.errors.include?(:check_in) %>
  <p class="text-danger"><%= @reservation.errors.full_messages_for(:check_in).first %></p>
<% end %>

<div class="field">
  <%= obj.label :check_out, class: "form-label" %>
  <%= obj.date_field :check_out, autofocus: true, autocomplete: "check_out", class: "form-control" %>
</div>
<% if @reservation.errors.include?(:check_out) %>
  <p class="text-danger"><%= @reservation.errors.full_messages_for(:check_out).first %></p>
<% end %>

<div class="field">
  <%= obj.label :count_person, class: "form-label" %>
  <%= obj.number_field :count_person, min: 0, autocomplete: "count_person", placeholder: "0", class: "form-control" %>
</div>
<% if @reservation.errors.include?(:count_person) %>
  <p class="text-danger"><%= @reservation.errors.full_messages_for(:count_person).first %></p>
<% end %>
